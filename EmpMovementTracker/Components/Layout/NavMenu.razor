<MudNavMenu Color="Color.Secondary" Class="@(DrawerOpen ? "px-2" : "")" Rounded Style="transition: all 200ms ease-in-out">
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Rounded.Home">
        Home
    </MudNavLink>
    <MudNavLink Href="/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Rounded.Dashboard">
        Dashboard
    </MudNavLink>
    <MudNavGroup Title="Examples" Expanded="true" Icon="@Icons.Material.Rounded.Pages" HideExpandIcon="!DrawerOpen">
        <MudNavLink Href="/example/counter" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Rounded.Calculate">
            Counter
        </MudNavLink>
        <MudNavLink Href="/example/weather" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Rounded.WbSunny">
            Weather
        </MudNavLink>
    </MudNavGroup>
</MudNavMenu>

@code {
    [Parameter] public bool DrawerOpen { get; set; }
}