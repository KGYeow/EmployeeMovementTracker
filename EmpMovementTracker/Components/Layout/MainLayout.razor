</div> *@

@code {
    // Variable declaration & initialization
    bool drawerOpen = true;

    // Toggle the drawer to open/close
    void DrawerToggle() => drawerOpen = !drawerOpen;
    
    // Define custom theme
    MudTheme MyCustomTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#003D6B",
            Secondary = "#3CB4E5",
            Background = "#F5F5F5",
        }
    };
}