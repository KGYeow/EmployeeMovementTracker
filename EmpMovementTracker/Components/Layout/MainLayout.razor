@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider Theme="MyCustomTheme" />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <!-- Topbar -->
    <MudAppBar Color="Color.Primary" ToolBarClass="gap-4">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h6">Employee Movement Tracker</MudText>
    </MudAppBar>

    <!-- Sidebar -->
    <MudDrawer Class="py-3" Color="Color.Primary" ClipMode="DrawerClipMode.Always" @bind-Open="@drawerOpen">
        <NavMenu />
    </MudDrawer>

    <!-- Main Content -->
    <MudMainContent Class="min-vh-100">
        <!-- Page Content -->
        <MudContainer Class="my-6" MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>

    <!-- Footer -->
    <MudAppBar Bottom Fixed="false" Color="Color.Primary" Elevation="0">
        <MudItem>
            &copy; @DateTime.Now.Year Jabil Inc.. All rights reserved.
        </MudItem>
    </MudAppBar>
</MudLayout>

@code {
    // Variable declaration & initialization
    bool drawerOpen = false;

    // Toggle the drawer to open/close
    void DrawerToggle() => drawerOpen = !drawerOpen;
    
    // Define custom theme
    MudTheme MyCustomTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#003D6B",
            Secondary = "#9FA8DA",
            Tertiary = "#E8EAF6",
            Background = "#F5F5F5",
        }
    };
}